# ── Database (external PostgreSQL on 192.168.32.22) ──────────
DB_HOST=192.168.32.22
DB_PORT=5432
DB_NAME=syslog_collector_ai
DB_USER=syslog_ai
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ── LLM ──────────────────────────────────────────────────────
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ── Pipeline ─────────────────────────────────────────────────
PIPELINE_INTERVAL_MS=300000
CONNECTOR_POLL_INTERVAL_MS=60000

# ── Security / Redaction ─────────────────────────────────────
REDACTION_ENABLED=false

# ── CORS (set to dashboard URL to restrict cross-origin) ─────
CORS_ORIGIN=http://192.168.32.21:8080

# ── Dashboard ────────────────────────────────────────────────
# This is baked into the dashboard build — the URL your browser uses to reach the backend
VITE_API_URL=http://192.168.32.21:3000
DASHBOARD_PORT=8080

# ── Ports ────────────────────────────────────────────────────
PORT=3000

