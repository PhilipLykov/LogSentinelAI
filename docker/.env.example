# ── Database (external PostgreSQL) ────────────────────────────
DB_HOST=192.168.1.100
DB_PORT=5432
DB_NAME=syslog_collector_ai
DB_USER=syslog_ai
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ── LLM ──────────────────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# ── Pipeline ─────────────────────────────────────────────────
PIPELINE_INTERVAL_MS=300000
CONNECTOR_POLL_INTERVAL_MS=60000

# ── Security / Redaction ─────────────────────────────────────
REDACTION_ENABLED=false

# ── Admin bootstrap (optional) ───────────────────────────────
# If not set, a random password is generated on first start (printed to logs).
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=YourSecureAdminPassword123!

# ── CORS (set to dashboard URL to restrict cross-origin) ─────
CORS_ORIGIN=http://192.168.1.100:8070

# ── Dashboard ────────────────────────────────────────────────
# VITE_API_URL is baked into the dashboard at build time.
# Set this to the backend URL as reachable from the user's browser.
VITE_API_URL=http://192.168.1.100:3000
DASHBOARD_PORT=8070

# ── Ports ────────────────────────────────────────────────────
PORT=3000

# ── Timezone ─────────────────────────────────────────────────
TZ=Europe/Chisinau

# ── Alerting tokens (optional) ───────────────────────────────
# PUSHOVER_TOKEN=
# PUSHOVER_USER_KEY=
# NTFY_BASE_URL=https://ntfy.sh
# NTFY_TOPIC=
# GOTIFY_BASE_URL=
# GOTIFY_APP_TOKEN=
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
